<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="info.iut.acy.fr.miniproject.Company.CompanyActivity"
    android:id="@+id/addCompany">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >
            <!-- everything you already have -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <EditText
            android:id="@+id/EditTextName"
            android:layout_height="wrap_content"
            android:hint="Nom de l'entreprise"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/EditTextAdresse"
            android:layout_height="wrap_content"
            android:hint="Adresse de l'entreprise"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextPostal"
            android:layout_height="wrap_content"
            android:hint="Code postal de l'entreprise"
            android:inputType="textPersonName|numberSigned"
            android:layout_width="match_parent">
        </EditText>

        <EditText
           android:id="@+id/EditTextCity"
           android:layout_height="wrap_content"
           android:hint="Ville de l'entreprise"
           android:inputType="textPersonName"
           android:layout_width="match_parent"
            android:layout_gravity="left">
       </EditText>

        <EditText
            android:id="@+id/EditTextCountry"
            android:layout_height="wrap_content"
            android:hint="Pays de l'entreprise"
            android:inputType="textPersonName"
            android:layout_width="match_parent">
        </EditText>
        <EditText
            android:id="@+id/EditTextPhone"
            android:layout_height="wrap_content"
            android:hint="NumÃ©ro de l'entreprise"
            android:inputType="phone|textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/EditTextMail"
            android:layout_height="wrap_content"
            android:hint="Email de l'entreprise"
            android:inputType="textEmailAddress|textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/EditTextWebsite"
            android:layout_height="wrap_content"
            android:hint="Site de l'entreprise"
            android:inputType="textUri|textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/EditTextSize"
            android:layout_height="wrap_content"
            android:hint="Taille de l'entreprise"
            android:inputType="textPersonName|numberSigned"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editText"
            android:hint="Description de l'entreprise"
            android:height="100dp" />
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:id="@+id/submitCompany"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        </LinearLayout>
        </TableLayout>
    </ScrollView>

</RelativeLayout>