<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="info.iut.acy.fr.miniproject.Company.CompanyActivity"
    android:id="@+id/addCompany">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L&apos;entreprise"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/EditTextName"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/EditTextAdresse"
            android:layout_height="wrap_content"
            android:hint="Adresse"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:id="@+id/EditTextPostal"
            android:layout_height="wrap_content"
            android:hint="Code postal"
            android:inputType="textPersonName|numberSigned"
            android:layout_width="match_parent">
        </EditText>

        <EditText
           android:id="@+id/EditTextCity"
           android:layout_height="wrap_content"
           android:hint="Ville"
           android:inputType="textPersonName"
           android:layout_width="match_parent"
            android:layout_gravity="left">
       </EditText>

        <EditText
            android:id="@+id/EditTextCountry"
            android:layout_height="wrap_content"
            android:hint="Pays"
            android:inputType="textPersonName"
            android:layout_width="match_parent">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextService"
            android:layout_gravity="center_horizontal"
            android:hint="Service" />

        <EditText
            android:id="@+id/EditTextPhone"
            android:layout_height="wrap_content"
            android:hint="NumÃ©ro"
            android:inputType="phone|textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/EditTextMail"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress|textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/EditTextWebsite"
            android:layout_height="wrap_content"
            android:hint="Site"
            android:inputType="textUri|textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/EditTextSize"
            android:layout_height="wrap_content"
            android:hint="Taille"
            android:inputType="textPersonName|numberSigned"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/EditTextDescription"
            android:hint="Description"
            android:height="100dp" />
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:id="@+id/submitCompany"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        </LinearLayout>
        </TableLayout>
    </ScrollView>

</RelativeLayout>