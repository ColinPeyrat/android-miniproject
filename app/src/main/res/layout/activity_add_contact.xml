<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="info.iut.acy.fr.miniproject.Company.CompanyActivity"
    android:id="@+id/addCompany">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >
            <!-- everything you already have -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:weightSum="1">


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_company"
                    android:minHeight="48dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_means"
                    android:minHeight="48dp"/>

                <EditText
                    android:id="@+id/contact_description"
                    android:layout_height="wrap_content"
                    android:hint="Description du contact"
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent">
                </EditText>

                <EditText
                    android:id="@+id/contact_date"
                    android:layout_height="wrap_content"
                    android:hint="Date du contact"
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent"
                    android:focusable="false">
                </EditText>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ajouter"
                    android:id="@+id/submitContact"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp" />

            </LinearLayout>
        </TableLayout>
    </ScrollView>

</RelativeLayout>