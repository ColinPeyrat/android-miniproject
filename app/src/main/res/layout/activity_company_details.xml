<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="info.iut.acy.fr.miniproject.Company.CompanyDetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Nom de l&apos;entreprise"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse :"
        android:id="@+id/tvLblAdress"
        android:layout_below="@+id/tvName"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse"
        android:id="@+id/tvAdress"
        android:layout_alignTop="@+id/tvLblAdress"
        android:layout_toEndOf="@+id/tvLblAdress"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CP"
        android:id="@+id/tvCp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tvAdress"
        android:layout_toEndOf="@+id/tvLblAdress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ville"
        android:id="@+id/tvCity"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tvAdress"
        android:layout_toEndOf="@+id/tvCp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pays"
        android:id="@+id/tvCountry"
        android:layout_below="@+id/tvCp"
        android:layout_alignStart="@+id/tvCp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service :"
        android:id="@+id/tvLblService"
        android:textStyle="bold"
        android:layout_below="@+id/tvCountry"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unregistered"
        android:id="@+id/tvService"
        android:layout_alignTop="@+id/tvLblService"
        android:layout_toEndOf="@+id/tvLblService"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Téléphone :"
        android:id="@+id/tvLblPhone"
        android:textStyle="bold"
        android:layout_below="@+id/tvLblService"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unregistered"
        android:id="@+id/tvPhone"
        android:paddingLeft="5dp"
        android:layout_alignTop="@+id/tvLblPhone"
        android:layout_toEndOf="@+id/tvLblPhone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:id="@+id/tvLblMail"
        android:textStyle="bold"
        android:layout_below="@+id/tvLblPhone"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unregistered"
        android:id="@+id/tvMail"
        android:paddingLeft="5dp"
        android:layout_alignTop="@+id/tvLblMail"
        android:layout_toEndOf="@+id/tvLblMail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Site internet :"
        android:id="@+id/tvLblWebsite"
        android:textStyle="bold"
        android:layout_below="@+id/tvLblMail"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unregistered"
        android:id="@+id/tvWebsite"
        android:paddingLeft="5dp"
        android:layout_alignTop="@+id/tvLblWebsite"
        android:layout_toEndOf="@+id/tvLblWebsite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taille :"
        android:id="@+id/tvLblSize"
        android:textStyle="bold"
        android:layout_below="@+id/tvLblWebsite"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unregistered"
        android:id="@+id/tvSize"
        android:paddingLeft="5dp"
        android:layout_below="@+id/tvLblWebsite"
        android:layout_toEndOf="@id/tvLblSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description :"
        android:id="@+id/tvLblDescription"
        android:textStyle="bold"
        android:layout_below="@+id/tvLblSize"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unregistered"
        android:id="@+id/tvDescription"
        android:paddingLeft="5dp"
        android:layout_alignTop="@+id/tvLblDescription"
        android:layout_toEndOf="@+id/tvLblDescription" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider l&apos;offre de stage"
        android:id="@+id/btnAccepted"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvDescription"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
